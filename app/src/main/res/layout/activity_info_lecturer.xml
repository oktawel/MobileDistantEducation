<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_info_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:paddingTop="4dp">

        <androidx.cardview.widget.CardView
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="@color/button"
                android:text="Назад"
                android:background="@color/white"
                android:scaleType="center"
                android:elevation="0dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="14dp"
            android:layout_toStartOf="@+id/iv_profile_icon"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="User_name"/>

        <ImageView
            android:id="@+id/iv_profile_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/btn_exit_acc"
            android:contentDescription="Иконка профиля"
            android:src="@drawable/baseline_account_circle_24"
            app:tint="@color/light" />

        <ImageView
            android:id="@+id/btn_exit_acc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"

            android:layout_marginEnd="4dp"
            android:contentDescription="Иконка выхода"
            android:src="@drawable/baseline_cancel_24"
            app:tint="@color/button" />
    </RelativeLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@color/grey_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-46dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:gravity="center_horizontal"
            android:text="InfoAbout"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/containerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_field"
            android:orientation="vertical"
            android:text="Name"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginHorizontal="70dp"
            android:padding="8dp"
            android:layout_marginVertical="30dp"/>

        <TextView
            android:id="@+id/containerSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_field"
            android:orientation="vertical"
            android:text="Surname"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginHorizontal="70dp"
            android:padding="8dp"
            android:layout_marginVertical="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp">

            <TextView
                android:id="@+id/containerLogin"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_field"
                android:orientation="vertical"
                android:text="Login"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/containerPassword"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_field"
                android:orientation="vertical"
                android:text="Password"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:padding="8dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/edit_button"
            android:text="Редактировать"
            android:drawableStart="@drawable/baseline_edit_24"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/button"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>